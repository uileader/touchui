<!--accordion.ui-->
<template>
  <ui-page>
    <ui-accordion header-height="50" bindchange="slide" ui:for="{{ accordion }}">
      <ui-view slot="header">
        <ui-row height="50" border-bottom class="title">
          <ui-col vertical-align="middle" align="left" space-left="10">
            {{ item.title }}
          </ui-col>
          <ui-col vertical-align="middle" align="center" width="60">
            {{ item.number }}项
          </ui-col>
          <ui-col vertical-align="middle" align="center" width="60">
            <ui-view class="state {{ item.state }}" ui:if="{{ item.state==='abnormal' }}">{{ item.stateNum }}项异常</ui-view>
            <ui-view class="state {{ item.state }}" ui:else>全部正常</ui-view>
          </ui-col>
          <ui-col vertical-align="middle" align="center" width="30"></ui-col>
        </ui-row>
      </ui-view>
      <ui-view slot="content">
        <ui-row height="40" ui:for="{{ item.content }}" ui:for-item="item2" class='content'>
          <ui-col vertical-align="middle" align="left" space-left="10">{{ item2.title }}</ui-col>
          <ui-col vertical-align="middle" align="center" width="50">
            <ui-icon type="{{ item.state==='abnormal' ? 'error':'success' }}" size="16" color="{{ item.state==='abnormal' ? '#F5AC29':'#2AA744' }}"></ui-icon>
          </ui-col>
        </ui-row>
      </ui-view>
    </ui-accordion>
    
    <ui-view class="content_list">
        <ui-view ui:for="{{ items }}" class="{{{'grey-bg': index % 2 == 0}}}">
          {{ item }}
        </ui-view>
      </ui-view>
  </ui-page>
</template>

<script>
  // accordion.js
export default {
  config: {
    "navigationBarTitleText": "手风琴"
  },
  data () {
    return {
      items: [],
      bottom: 15,
      accordion: [
        {
          title: '排除重大事故',
          number: 20,
          state: 'abnormal',
          stateNum: 5,
          content: [
            {
              title: '防火墙无火烧或熏黑痕迹'
            },
            {
              title: '发动机线束无火烧或熏黑痕迹'
            },
            {
              title: '车辆覆盖件无火烧或熏黑痕迹'
            },
            {
              title: '舱内保险丝盒无火烧或熏黑痕迹'
            }
          ]
        }, {
          title: '排除水泡车',
          number: 8,
          state: 'normal',
          stateNum: 5,
          content: [
            {
              title: '防火墙无火烧或熏黑痕迹'
            },
            {
              title: '发动机线束无火烧或熏黑痕迹'
            },
            {
              title: '车辆覆盖件无火烧或熏黑痕迹'
            },
            {
              title: '舱内保险丝盒无火烧或熏黑痕迹'
            }
          ]
        }, {
          title: '排除水泡车',
          number: 8,
          state: 'normal',
          stateNum: 5,
          content: [
            {
              title: '防火墙无火烧或熏黑痕迹'
            },
            {
              title: '发动机线束无火烧或熏黑痕迹'
            },
            {
              title: '车辆覆盖件无火烧或熏黑痕迹'
            },
            {
              title: '舱内保险丝盒无火烧或熏黑痕迹'
            }
          ]
        }
      ]
    }
  },
  methods: {
    slide (e) {
      console.log(e)
    }
  },
  mounted () {
    for (let i = 1; i <= this.bottom; i++) {
      this.items.push(`列表项目${i}`)
    }
  }
}

</script>

